<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jweihao.jdemo.ui.activity.book.AndroidMenuActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Android书籍"
            android:textColor="#F2F2F2"
            android:textSize="20dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_diyihang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_1"
        android:background="@color/white"
        android:text="《第一行代码》"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/button_hero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_1"
        android:background="@color/white"
        android:text="《Android群英传》"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/button_art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_1"
        android:background="@color/white"
        android:text="《Android开发艺术探索》"
        android:textAllCaps="false"
        android:textColor="@color/black" />

</LinearLayout>
