<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jweihao.jdemo.ui.activity.layout.LayoutActivity">

    <Button
        android:layout_margin="@dimen/px_1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:id="@+id/button_catvr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CoordinatorLayout + AppBarLayout + TabLayout + ViewPager + RecyclerView"
        android:textAllCaps="false" />

    <Button
        android:layout_margin="@dimen/px_1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:id="@+id/button_ntvr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NestedScrollView + TabLayout + ViewPager + RecyclerView"
        android:textAllCaps="false" />


</LinearLayout>
