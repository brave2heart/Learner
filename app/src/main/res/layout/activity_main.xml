            android:id="@+id/button_canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘图"
            android:textAllCaps="false" />


    <Button
        android:id="@+id/button_md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Material Design"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android性能优化"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实例"
        android:textAllCaps="false" />

