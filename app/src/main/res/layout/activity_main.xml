        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义控件" />


    <Button
        android:id="@+id/button_http"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网络框架"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_layout"
